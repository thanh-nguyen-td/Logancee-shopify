<a class="card-blog-post-container link_text" href="{{ article.url }}">
    <div class="img-container">
        <img class="card-blog-post__img " 
            srcset="{%- if article.image.src.width >= 165 -%}{{ article.image.src | image_url: width: 165 }} 165w,{%- endif -%}
            {%- if article.image.src.width >= 360 -%}{{ article.image.src | image_url: width: 360 }} 360w,{%- endif -%}
            {%- if article.image.src.width >= 533 -%}{{ article.image.src | image_url: width: 533 }} 533w,{%- endif -%}
            {%- if article.image.src.width >= 720 -%}{{ article.image.src | image_url: width: 720 }} 720w,{%- endif -%}
            {%- if article.image.src.width >= 1000 -%}{{ article.image.src | image_url: width: 1000 }} 1000w,{%- endif -%}
            {%- if article.image.src.width >= 1500 -%}{{ article.image.src | image_url: width: 1500 }} 1500w,{%- endif -%}
            {{ article.image.src | image_url }} {{ article.image.src.width }}w"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            
            src="{{ article.image.src | image_url: width: 533}}" width="auto"  height="auto" loading="lazy"/>
    </div>
    <div class="card-blog-post__content">
            <h2 class="blog-post__title uppercase text_600">{{ article.title | truncate: 50 | escape }}</h2>
          <div class="card-blog-post__content-conment">
            <span>
                <p>
                    <span style="margin-right:5px">
                        {% render 'icon-icon', type:'calender',size:10 %}
                    </span>
                   {{ article.published_at | date: '%d-%m-%Y' }}
                </p>
            </span>
            <span>
                <p class="card-blog-post__content-comment">
                    <span style="margin-right:5px">{% render 'icon-icon', type:'message', size:15 %}</span>
                   {{ 'blogs.article.comments' | t: count: article.comments_count }}
                </p>
            </span>
           
          </div>
    </div>
</a>
{% style %}
    .blog-post__title {
        font-size:var(--font-text-sm);
        color:var(--color-white-text)
    }
    .card-blog-post__content-comment:hover{
        color:#000
    }
    .blog-post__title:hover {
        color:#000
    }
    .card-blog-post-container {
        width:100%;
        align-items: start;
        position: relative;
    }

    .card-blog-post-container .img-container {
        width: 100%;
        position: relative;
        padding-top: 75%;
    }

    .card-blog-post-container .card-blog-post__img{
        width:100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        object-fit: cover;
        object-position: center;
    }
    .card-blog-post-container .card-blog-post__content{
        position: absolute;
        top:70%;
        width:100%;
        padding:15px;
        color:var(--color-white-text)
    }
    .card-blog-post-container .card-blog-post__content h2 {
        margin:0;
    }
    .card-blog-post-container .card-blog-post__content-conment {
        display:flex;
        flex-direction: row;
        margin-top:5px
    }
    .card-blog-post-container .card-blog-post__content-conment p {
        margin:0;
        font-size:var(--font-text-xs)
    }
    .card-blog-post-container .card-blog-post__content-conment p:first-child{
       margin-right:20px
    }
    .card-blog-post-container .card-blog-post__content-conment p:nth-child(2){
       
    }
{% endstyle %}