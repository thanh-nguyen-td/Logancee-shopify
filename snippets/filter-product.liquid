<div  class="page-width custom-filter-container">
   {%- comment -%} <div class="row"> {%- endcomment -%}
      {%- comment -%} LEFT {%- endcomment -%}
     {%- comment -%} <div class="col-12 col-sm-6 filter__left">
        <div class="row">
         <div class="col-12 custom_center">
            <h4 class="mg_0">Showing 1 to 16 of 17 total</h4>
         </div>
         <div class="facet-filters__field" style="margin-right:30px">
            <h2 class="facet-filters__label caption-large text-body">
               <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
            </h2>
            <div class="select">
               {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
               <select name="sort_by" class="facet-filters__sort select__select caption-large" id="SortBy" aria-describedby="a11y-refresh-page-message">
                  {%- for option in collection.sort_options -%}
                     <option value="{{ option.value | escape  }}"{% if option.value == sort_by %} selected="selected"{% endif %}>{{ option.name | escape }}</option>
                  {%- endfor -%}
               </select>
               {% render 'icon-caret' %}
            </div>
         </div>
        </div>
      </div> {%- endcomment -%}
       {%- comment -%} RIGHT {%- endcomment -%}
     {%- comment -%} <div class="col-12 col-sm-6 filter__right">
         <div class="facet-filters__field  ml_5" style="justify-content:start">
            <h2 class="facet-filters__label caption-large text-body">
               <label for="Show">Show:</label>
            </h2>
            <div class="select">
               <select name="sort" class="facet-filters__sort select__select caption-large" id="Show" aria-describedby="a11y-refresh-page-message">
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
               </select>
               {% render 'icon-caret' %}
            </div>
         </div>
