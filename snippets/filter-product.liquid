{% style %}
   .custom-filter-container{
      margin-bottom:30px;
      margin-top:10px
   }

   .facet-filters__items {
      display:flex;
      justify-content:center
   }
  
   .custom-filter-container h4,
   .custom-filter-container h2 {
      font-size:var(--font-text-sm);
      font-weight:var(--font-text-normal)
   }
   .custom-filter-container select{
      font-size:var(--font-text-sm);
      font-weight:var(--font-text-semibold)
   }
   .custom-filter-container h4,
   .custom-filter-container label,
   .custom-filter-container .list-icont{
      color:#999
   }
   .custom-filter-container h2 {
      text-transform:uppercase;
      margin-right:5px
   }
    .custom-filter-container .custom-icon:hover{
        cursor: pointer
    }
    .custom-filter-container .wrap-icon {
      display:flex;
      justify-content:flex-end
    }
   .custom-filter-container .wrap-icon span{
      margin:0 5px
   }
   .filter__left,
   .filter__right  {
      display: flex
   }

   .facet-filters__field {
         display:flex;
         justify-content:center;
         align-items:center
      }
   @media screen and (max-width:992px){
      .filter__left,
      .filter__right  {
         display: block
      } 
      .facet-filters__field {
         justify-content:center
      }
   }
   @media screen and (max-width:1200px){

      .facet-filters__field {
         justify-content:start
      }
      .custom-filter-container .wrap-icon {
      justify-content:start
   }
{% endstyle %}

