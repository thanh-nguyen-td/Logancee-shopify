          }
    ],
    "blocks":[
      {
        "name":"Image",
        "type":"image",
        "settings":[
          {
            "type": "image_picker",
            "id": "image",
            "label": "Select image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default":"Men's shop"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default":"Alexsandro luigi shoes"
          },
          {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default":"Lorem ipsum dolor sit amet consectetur adipisicing elit. Vitae sint iure at velit possimus. Dignissimos!"
