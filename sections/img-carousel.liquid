{% schema %}

{
    "name":"Carousel",
    "tag":"section",
    "settings":[
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Featured Collection"
        },
         {
            "type": "collection",
            "id":"feature-collection",
            "label":"Collection"
        },
        {
            "type": "range",
            "id": "product_count",
            "min": 4,
            "max": 12,
            "label": "Number of products to display",
            "default": 4
          }
    ],
    "blocks":[
      {
        "name":"Image",
        "type":"image",
        "settings":[
          {
            "type": "image_picker",
            "id": "image",
            "label": "Select image"
          }
        ]
      }
    ],
    "presets": [
    {
        "name":"Carousel"
    }
   ]
}
{% endschema %}