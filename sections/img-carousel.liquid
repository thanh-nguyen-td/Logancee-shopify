{% comment %}

  Renders a Carousel
  Request:
    - add link in theme:
      <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
      <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    - for loop
  Accepts:null
  Usage:
  {% section 't03-carousel' %}

{% endcomment %}
{%- capture flickity_options -%}
{
  "prevNextButtons": true,
  "pageDots": false,
  "contain": true,
  "cellAlign": "left",
  "groupCells": true,
  "autoPlay": false,
  "arrowShape": {"x0": 20, "x1": 60, "y1": 40, "x2": 60, "y2": 35, "x3": 25}
}
{%- endcapture -%}

<div class="featured-collection-slider">
  <div class="products-carousel js-flickity" data-flickity='{{ flickity_options }}'>
    <!-- hoặc sử dụng vòng lặp for từ collection truyền vào trong content -->
      {% for block in section.blocks  %}
        <div class="carousel-cell">
          <div class="carousel__items">
            <img style="width:100%" src="{{block.settings.image | img_url:'large'}}"/>
            <div class="carousel__content">
              <h3 class="carousel__heading">{{ block.settings.heading }}</h3>
              <h2 class="carousel__title">{{ block.settings.title }}</h2>
              <h4 class="carousel__description">{{ block.settings.description }}</h4>
              <div class="carousel__content-button">
               <div class="hehe">
                <a href="#">{{ block.settings.button }}</a>
               </div>
              </div>
            </div>
          </div>
        </div> 
      {% endfor %}
  </div>
 
  <div class="carousel__wrap-button">
    <div class="carousel__button">Prev</div>
    <div class="carousel__button">Next</div>
  </div>
</div>
    <style>
      .carousel__heading{
        color:#fff;
        font-size: var(--font-text-sm);
        text-transform: uppercase;
        font-weight: var(--font-text-semibold);
        letter-spacing:3px ;
        margin-bottom:50px;
        font-family:var(--font-family-1)
      }
      .carousel__title{
        color:#fff;
        font-size: 24px;
        text-transform: uppercase;
        font-weight: var(--font-text-semibold);
        margin-bottom: 30px;
      }
      .carousel__description{
        color:#fff;
        font-size: var(--font-text-sm);
        font-weight: var(--font-text-normal);
        margin-bottom: 30px;
      }
      .carousel__content-button {
       margin: 2px 0;
        color:#fff;
        display: block;
      }
    
      .carousel__content-button > div {
      font-size: var(--font-text-13);
      text-transform: uppercase;
      font-weight: var(--font-text-semibold);
      margin: 5px;
      padding: 10px 20px;
      border:1px solid #fff;
    }
    .carousel__content-button > div a {
      text-decoration: none;
      color:#fff;
    }
    .carousel__content-button:hover {
      border:2px solid #fff;
      margin: 0;
      animation: show 0.5s ease-out normal;
    }
    .carousel__content-button:hover > div,
    .carousel__content-button:hover > div a{
      background: #fff;
      color:  rgba(0, 0, 0, 0.5);
    
    }
      .carousel__items {
        position:relative
      }

      .carousel__items:hover .carousel__content{
        animation: show 0.5s ease-out normal;
        display: flex;
      }
      .carousel__content {
        position:absolute;
        top: 0;
        width: 100%;
        height: 100%;
        display:none;
        justify-content:center;
        align-items:center;
        flex-direction: column;
        background: #000;
        background: rgba(0, 0, 0, 0.5);
        padding:0 40px;
        text-align: center;
        
      }
      .flickity-button {
        background: transparent;
        z-index: 3;
        width:65px;
        height:65px;
        color: transparent;

      }
      .flickity-button:hover{
        background: transparent;
        color: transparent;
      }
      .carousel__wrap-button {
        display:flex;
        justify-content:space-between;
        width:100%;
        position:absolute;
        top:45%;
        padding: 0 10px;
        max-height: 0.1px;
      
      }
      .carousel__button {
        font-size:16px; 
        width:65px;
        height:65px; 
        word-wrap: break-word;
        padding:10px 8px;
        letter-spacing: 7px;
        color: #fff;
        text-align: center;
        text-transform: uppercase;
        background:rgba(161, 161, 161, 0.8) none repeat scroll 0 0
      }
        .featured-collection-slider{
          margin: 0 auto;
          position:relative;
        }
        .featured-collection-slider .carousel-cell{
          width:25%;
          padding: 0;
          display: block;
        }
        .flickity-button:disabled{
          pointer-events: all!important;
        }

        @keyframes show{
          from{
            transform:scale(0.8);
          }
          to{
            transform: scale(1);
          }
        }

        @media screen and (max-width: 920px){
          .featured-collection-slider{
            padding-left: 15px;
            padding-right: 15px;
          }
          .featured-collection-slider .carousel-cell{
            width:50%;
          }
        }
        @media screen and (max-width: 767px){
          .featured-collection-slider .carousel-cell{
            width:100%;
          }
        }
        </style>
