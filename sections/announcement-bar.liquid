{% style %}
  .custom-announcement .announcement__left{
    font-size:14px;
    display:flex
  } 
  .custom-announcement .row {
    padding:5px 0px
  }

  .custom-announcement .items,
  .custom-announcement .right__items{
    display:flex;
    align-items:center
  }
  .custom-announcement .items .wrap-icon,
  .custom-announcement .right__items .wrap-icon
  {
    display:flex; 
    justify-content:center;
    align-items:center; 
    margin-right:5px
  }
  .custom-announcement .announcement__left .items:first-child{
    margin-right:10px;
    padding-right:10px;
    border-right:1px solid #999
  }
  .custom-announcement .announcement__left .items span:nth-child(2) {
    color:#999
  }
  .custom-announcement .announcement__right{
    display:flex; 
    justify-content:flex-end;
    align-items:center;
    font-size:14px;
    height:100%;
  }

  .custom-announcement .announcement__right a {
    color:#000;
   
  }
  .custom-announcement .right__items:first-child,
  .custom-announcement .right__items:nth-child(2){
    border-right:1px solid #999;
    height:80%;
    padding-right:10px;
  }

  @media screen and (max-width: 768px) {
    .custom-announcement .announcement__right{
      justify-content:start;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "accent-1",
              "label": "t:sections.all.colors.accent_1.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.all.colors.accent_2.label"
            },
            {
              "value": "background-1",
              "label": "t:sections.all.colors.background_1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.all.colors.background_2.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.all.colors.inverse.label"
            }
          ],
          "default": "accent-1",
          "label": "t:sections.all.colors.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
