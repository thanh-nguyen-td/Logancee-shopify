<div class="list-text-icon-container">
    <div class="page-width">
        <div class="row">
            {% for block in section.blocks %}
                {% assign items = block.settings %}
                <div class="col" style="padding:0 {{ section.settings.padding_card }}px; ">
                    {%- comment -%} content {%- endcomment -%}
                        <div class="list-text-icon__content">
                            <div class="wrap-img" style="height:{{section.settings.size_icon}}px; width:{{section.settings.size_icon}}px">
                                {% case items.select_icon %}
                                    {% when 'map_pin' %}
                                        {% render 'icon-accordion', icon: 'map_pin' %}
                                    {% when 'message' %}
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" id="footer-sample-full" width="100%" height="100%" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24" class="iconify iconify--bx"><path fill="currentColor" d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2zm0 18a8 8 0 1 1 8-8a8 8 0 0 1-8 8z"></path><path fill="currentColor" d="M12 11c-2 0-2-.63-2-1s.7-1 2-1s1.39.64 1.4 1h2A3 3 0 0 0 13 7.12V6h-2v1.09C9 7.42 8 8.71 8 10c0 1.12.52 3 4 3c2 0 2 .68 2 1s-.62 1-2 1c-1.84 0-2-.86-2-1H8c0 .92.66 2.55 3 2.92V18h2v-1.08c2-.34 3-1.63 3-2.92c0-1.12-.52-3-4-3z"></path></svg>
                                    {% else %}
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" id="footer-sample-full" width="40" height="40" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24" class="iconify iconify--bx"><path fill="currentColor" d="M12 2C6.486 2 2 5.589 2 10c0 2.908 1.898 5.516 5 6.934V22l5.34-4.005C17.697 17.852 22 14.32 22 10c0-4.411-4.486-8-10-8zm0 14h-.333L9 18v-2.417l-.641-.247C5.67 14.301 4 12.256 4 10c0-3.309 3.589-6 8-6s8 2.691 8 6s-3.589 6-8 6z"></path></svg>
                                {% endcase %}
                            </div>
                            <h2 class="text_black uppercase">{{ items.title }}</h2>
                            <h4 class="text_black">{{ items.description }}</h4>
                        </div>

                    {%- comment -%} endcontent {%- endcomment -%}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% schema %}
{
    "name": "Card text icon",
    "tag": "section",
    "settings": [
        {
            "type": "range",
            "id": "padding_card",
            "label": "Padding card",
            "default":0,
            "min":0,
            "max":50
        },
        {
            "type": "range",
            "id": "number_column",
            "label": "Number of columns on desktop",
            "default":3,
            "min":2,
            "max":5
        },
        {
            "type": "range",
            "id": "size_icon",
            "label": "Size icon",
            "default":10,
            "min":5,
            "max":100
        }
    ],
    "blocks":[
        {
            "type":"card",
            "name":"Card",
            "limit":3,
            "settings":[
                {
                    "type": "select",
                    "id": "select_icon",
                    "label": "Icon",
                    "default": "map_pin",
                    "options":[
                            {
                                "value":"map_pin",
                                "label":"Map pin"
                            },
                            {
                                "value":"message",
                                "label":"Message"
                            },
                            {
                                "value":"circle_dollar",
                                "label":"Circle dollar"
                            }
                        ]
		        },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default":"Title"
                },
                {
                    "type": "text",
                    "id": "description",
                    "label": "Description",
                    "default":"Description"
                }
            ]
        }
    ],
    "presets":[
        {
            "category":"Card line 1",
            "name":"Card text icon",
            "blocks": [
                {
                "type": "card"
                },
                {
                "type": "card"
                },
                {
                "type": "card"
                }
            ]
        }
    ]
}
{% endschema %}