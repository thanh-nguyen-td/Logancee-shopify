{% style %}
    
    .tabs-container .head {
        display:flex;
        align-items:center;
        justify-content:center
    }
    .tabs-container .head h3{
        font-weight:var(--font-text-semibold);
        padding:20px;
        margin:0;
        border-bottom:2px solid transparent;
        font-size:var(--font-text-sm);
        color:#cecece
    }
    .tabs-container .head h3:first-child{
        border-bottom:2px solid #000;
        color:var(--color-black-text)
    }
    .tabs-container .head h3:hover{
        border-bottom:2px solid #000
    }
    .tabs-container .tabs__line {
        height:1px;
        background:#999;
        color:transparent;
        width:100%
    }
    .tabs-container .content {
        margin-top:20px
    }
    .tabs-container .content ul {
        color:#999;
        list-style-type: none
    }
    .tabs-container .content ul li {
       display:flex;
       align-items:center;
       margin:10px 0;
    }
    .tabs-container .tabs__square{
        height:5px;
        width:5px;
        background:var(--color-gray-border);
        color:transparent;
        margin-right:10px;
    }
    .tabs-container .content h4{
        color:#999;
        font-size:var(--font-text-xs);
        margin:0
    }
    @media screen and (max-width:800px){
        .tabs-container .head{
            display:block;
        }
    }
{% endstyle %}
