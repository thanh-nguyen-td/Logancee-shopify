<div class="s-img-banner">
    {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: 'grande'}}" width="auto" height="auto" loading="lazy" class="s-img-banner__img"/>
    {% else %}
    {{ 'lifestyle-1' | placeholder_svg_tag: 's-img-banner__img' }}
    {% endif %}
    <div>
        {% for block in section.blocks %}
            <div>{{ block.text }}</div>
        {% endfor %}
       
        {%render 'breadcrumbs'%}
    </div>
</div>
{% schema %}
{
    "name":"Section image banner",
    "tag":"section",
    "settings":[
        {
        "type":"image_picker",
        "id":"image",
        "label":"Image"
        },
        {
            "type":"select",
            "label":"Type image",
            "id":"type_img",
            "default":"default",
            "options":[
                {
                    "value":"default",
                    "label":"Default"
                },
                {
                    "value":"small",
                    "label":"Small"
                },
                {
                    "value":"medium",
                    "label":"Medium"
                },
                {
                    "value":"large",
                    "label":"Large"
                }

            ]
        }

    ],
    "blocks":[
        {
            "type":"heading",
            "name":"Heading",
            "settings":[
                {
                    "type":"text",
                    "id":"heading",
                    "label":"Heading",
                    "default":"This is heading"
                }
            ]
        },
        {
            "type":"text",
            "name":"Text",
            "settings":[
                {
                    "type":"richtext",
                    "id":"text",
                    "label":"Text",
                    "default":"<p>This is text</p>"
                }
            ]
        }
    ]
}
{% endschema %}