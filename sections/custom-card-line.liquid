<div class="list-card-container">
    <div class="flex_container">
        {% for block in section.blocks %}
            {% assign items = block.settings %}
            <div class="flex_column" style="padding:0 {{ section.settings.padding_card }}px;">
                {%- comment -%} content {%- endcomment -%}
                    <div class="wrap-card-image-container">
                        <div class="overlay">T</div>
                        <img src="{{block.settings.image | img_url:'large'}}" loading="lazy" width="auto" height="auto" style="width: 100%;height:100%"/>
                        <div class="wrap-text-card" >
                            <h4 class="text_white uppercase">{{ items.heading }}</h4>
                            <h1 class="text_white uppercase">{{ items.title }}</h1>
                            <p class="text_white">{{ items.content }}</p>
                            <a href="#" class="text_link custom-button uppercase">{{ items.text_button }}</a>
                        </div>
                    </div>
                {%- comment -%} endcontent {%- endcomment -%}
            </div>
        {% endfor %}
    </div>
</div>
{% schema %}
{
    "name": "Card line",
    "tag": "section",
    "settings": [
        {
            "type": "range",
            "id": "padding_card",
            "label": "Padding card",
            "default":0,
            "min":0,
            "max":50
        }
    ],
    "blocks":[
        {
            "type":"card",
            "name":"Card",
            "limit":3,
            "settings":[
                {
                    "type":"image_picker",
                    "id":"image",
                    "label":"Image"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default":"Mens shop"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default":"Title"
                },
                {
                    "type": "text",
                    "id": "content",
                    "label": "Content",
                    "default":"Content"
                },
                {
                    "type": "text",
                    "id": "text_button",
                    "label": "Button content",
                    "default":"Button content"
                },
                {
                    "type": "url",
                    "id": "button_url",
                    "label": "Button url"
                }
            ]
        }
    ],
    "presets":[
        {
            "category":"Card line 1",
            "name":"Card line",
            "blocks": [
                {
                "type": "card"
                },
                {
                "type": "card"
                },
                {
                "type": "card"
                }
            ]
        }
    ]
}
{% endschema %}