<div class="list-card-container">
    <div class="flex_container">
       
        {% for block in section.blocks %}
            <div class="flex_column" style="background: red;border:1px solid gold; padding:0 {{ section.settings.padding_card }}px">
            <img src="{{block.settings.image}}" loading="lazy" width="auto" height="auto"/>
            </div>
        {% endfor %}
    </div>
</div>
{% schema %}
{
    "name": "Card line",
    "tag": "section",
    "settings": [
        {
            "type": "range",
            "id": "padding_card",
            "label": "Padding card",
            "default":0,
            "min":0,
            "max":50
        }
    ],
    "blocks":[
        {
            "type":"card",
            "name":"Card",
            "limit":3,
            "settings":[
                {
                    "type":"image_picker",
                    "id":"image",
                    "label":"Image"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default":"Mens shop"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default":"Title"
                },
                {
                    "type": "text",
                    "id": "content",
                    "label": "Content",
                    "default":"Content"
                },
                {
                    "type": "text",
                    "id": "text_button",
                    "label": "Button content",
                    "default":"Button content"
                },
                {
                    "type": "url",
                    "id": "button_url",
                    "label": "Button url"
                }
            ]
        }
    ],
    "presets":[
        {
            "category":"Card line 1",
            "name":"Card line",
            "blocks": [
                {
                "type": "card"
                },
                {
                "type": "card"
                },
                {
                "type": "card"
                }
            ]
        }
    ]
}
{% endschema %}